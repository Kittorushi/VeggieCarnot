<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/dimen_8"
    android:layout_marginVertical="8dp"
    android:orientation="vertical"

    >


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutFileTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/cardview_shadow_end_color"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <androidx.constraintlayout.widget.ConstraintLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtCommodityName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="txt_name"
                    android:layout_marginLeft="@dimen/dimen_8"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="24sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/iconFile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:src="@mipmap/ic_launcher"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="@dimen/dimen_8"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/txtCommodityName" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtStateName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="File Name"
                    android:layout_marginTop="@dimen/dimen_8"
                    android:textColor="@color/cardview_dark_background"
                    app:layout_constraintStart_toEndOf="@id/iconFile"
                    app:layout_constraintTop_toBottomOf="@id/txtCommodityName" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtDistrictName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="Category"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="@dimen/dimen_16"
                    app:layout_constraintStart_toEndOf="@id/iconFile"
                    app:layout_constraintTop_toBottomOf="@id/txtStateName" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtModal_pricerName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="Category"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="@dimen/dimen_16"
                    app:layout_constraintStart_toEndOf="@id/iconFile"
                    app:layout_constraintTop_toBottomOf="@+id/txtDistrictName" />


            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtMax_pricerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:text="02:38 PM"
        android:textColor="@color/colorAccent"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutFileTop"

        />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtMin_pricerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:text="05 Pag-PDF"
        android:textColor="@color/colorAccent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutFileTop" />


</androidx.constraintlayout.widget.ConstraintLayout>